# Discord Bot Token (required)
# Your Discord bot token from Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here

# Vultr API Key (required)
# Your Vultr API key from Vultr account settings
VULTR_API_KEY=your_vultr_api_key_here

# Vultr Snapshot ID (optional)
# ID of the snapshot to use when creating new instances
# If not provided, the most recent snapshot will be used
VULTR_SNAPSHOT_ID=your_snapshot_id_here

# Vultr Firewall Group ID (REQUIRED)
# UUID of the firewall group to attach to new instances
# Servers without firewall are automatically destroyed for security
VULTR_FIREWALL_GROUP_ID=your_firewall_group_id_here

# Vultr Region (optional)
# Region code for new instances (default: dfw - Dallas)
# See https://www.vultr.com/api/#tag/region for available regions
VULTR_REGION=dfw

# Vultr Plan (optional)
# Instance plan for new instances (default: vc2-1c-1gb - 1 CPU, 1GB RAM)
# See https://www.vultr.com/api/#tag/plans for available plans
VULTR_PLAN=vc2-1c-1gb

# Discord Guild ID (optional but recommended for immediate testing)
# Your Discord server ID - enables immediate command registration instead of waiting 1 hour
# Right-click your Discord server â†’ "Copy Server ID" (requires Developer Mode enabled)
DISCORD_GUILD_ID=your_server_id_here

# Admin User IDs (optional)
# Comma-separated Discord user IDs who can create snapshots
ADMIN_USER_IDS=123456789,987654321

# Self-Destruct Timer Settings (optional)
# Servers auto-destroy after timer expires; users can extend with "Insert Coin"
SELF_DESTRUCT_INITIAL_MINUTES=180
SELF_DESTRUCT_COIN_MINUTES=180

# Exclusion Settings (optional)
# Exclude specific instances or snapshots from bot management
EXCLUDE_INSTANCE_ID=
EXCLUDE_SNAPSHOT_ID=
